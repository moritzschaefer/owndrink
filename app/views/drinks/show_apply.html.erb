<%= form_for :drink, method: :put do |f| %>
  <p>
    <%= f.label 'Your E-Mail' %><br>
    <%= f.email_field :builder_email %>
  </p>
  <p>
    <%= f.label 'First Name' %><br>
    <%= text_field_tag :first_name %>
  </p>
  <p>
    <%= f.label 'Last Name' %><br>
    <%= text_field_tag :last_name %>
  </p>
  <%= f.submit %>

<% end %>

