<div class="row">
  <div class="col-md-7">

    <h1>Create your drink</h1>

    <%= form_for :drink, url: drinks_path, :html => {:id => 'drink_form'} do |f| %>
      <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </p>

      <p>
        <%= f.label :flavor_base %><br>
        <%= f.select :flavor_base, ['Rabarber', 'Ingwer', 'Maracuja', 'Birne-Quinoa', 'Rote Beete'] %>
      </p>


      <p>
        <%= f.label :e_numbers %><br>
        <%= check_box_tag "drink[e_numbers][]", "E175"  %> E175 Goldpartikel <br>
        <%= check_box_tag "drink[e_numbers][]", "E173"  %> E173 Aluminumpartikel <br>
        <%= check_box_tag "drink[e_numbers][]", "E153"  %> E153 Holzkohle/Schwarz <br>
        <%= check_box_tag "drink[e_numbers][]", "E235"  %> E235 Antibiotisch wirkende Schimmelpilzausscheidung <br>
        <%= check_box_tag "drink[e_numbers][]", "E296"  %> E296 Apfelsäure, unterstützt Antioxidantien <br>
        <%= check_box_tag "drink[e_numbers][]", "E300" %> E300 Ascorbinäure (Vitamin C) <br>
      </p>

      <p>
        <%= f.label :stevia %>
        <%= f.check_box :stevia %>
      </p>

      <p>
        <%= f.label :bottle_type %><br>
        <%= f.select(:bottle_type, [['Classic', 0], ['Big', 1],['Special', 3]]) %>
      </p>

      <p>
        <%= f.label :alcohol_type %>
        <%= f.select(:alcohol_type, ['Vodka', 'Tequila', 'Rum White', 'Rum Brown']) %>
      </p>

      <p>
        <%= f.label :energy_type %>
        <%= f.select(:energy_type, ['Taurin', 'Koffein', 'Guarana', 'Teein']) %>
      </p>

      <p>
        <%= f.label :blubber %>
        <%= f.select :blubber, ['0', '1', '2', '3', '4'] %>
      </p>

      <p>
        <%= f.label :required_amount %>
        <%= f.number_field :required_amount, value: 10, min: 1, max: 10000, step: 1 %>
      </p>

      <p>
        <%= f.label :price_idea %>
        <%= f.number_field :price_idea, min: 0.10, max: 10.0, step: 0.01, value: 1.0 %>
      </p>
      <p>
        <%= f.label 'Upload image' %>
        <%= button_tag('Upload', type: 'button', id: 'upload_button') %>
      </p>


      <p>
        <%= f.label :innovator_email %><br>
        <%= f.email_field :innovator_email %>
      </p>
      <p>
        <%= f.label 'First Name' %><br>
        <%= text_field_tag :first_name %>
      </p>
      <p>
        <%= f.label 'Last Name' %><br>
        <%= text_field_tag :last_name %>
      </p>
      <div id="payment-form"></div>

      <p>
        <%= f.submit %>
      </p>
    <% end %>
  </div>
  <div class="col-md-5">
    <div style="z-index:0; position:absolute; left:40px; top: 90px; width: 598px; height: 598px; background-image: url(<%= asset_path('0.jpg') %>)" id="bottle_img"></div>
    <div style="position:absolute; left: 270px; top: 350px; width: 137px; height: 318px; opacity: 0.7; z-index: 2;" id="bottle_overlay"></div>
    <div style="visibility: hidden; position:absolute; left: 270px; top: 410px; background-size:cover; width: 137px; height: 100px; z-index:3; background-image: url(<%= asset_path('banner.jpg') %>)" id="bottle_banner">
    </div>
  </div>
</div>
